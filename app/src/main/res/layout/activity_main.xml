<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/custom_button"
        android:layout_width="425dp"
        android:layout_height="408dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:src="@drawable/gatorlogo"
        android:stateListAnimator="@null"
        android:tint="@android:color/transparent"
        tools:src="@drawable/gatorlogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GATOR CHOMP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="48sp"
        app:fontFamily="sans-serif-light" />

    <Button
        android:id="@+id/BarcodeButton"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Barcode Scanner"
        android:background="#E88720"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/GoogleVisionButton"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#E88720"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Google Vision Scanner"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</LinearLayout>